# Arxiv Demo Configuration
# Copy this to .env and fill in your values

# ============================================
# Required Settings
# ============================================

# Databricks SQL Warehouse ID
# Find this in Databricks UI: SQL Warehouses > Your Warehouse > Connection Details
DATABRICKS_WAREHOUSE_ID=your_warehouse_id_here

# KIE (Key Information Extraction) Agent Endpoint
# Create a KIE Agent Brick in Databricks UI, then use its endpoint name
KIE_ENDPOINT=your_kie_endpoint_name

# ============================================
# Optional Settings (have defaults)
# ============================================

# Unity Catalog location for storing PDFs and metadata
ARXIV_CATALOG=arxiv_demo
ARXIV_SCHEMA=main
ARXIV_VOLUME=pdfs

# Databricks CLI profile (from ~/.databrickscfg)
DATABRICKS_PROFILE=default

# Knowledge Assistant endpoint (optional, for RAG queries)
# KA_ENDPOINT=your_ka_endpoint_name
